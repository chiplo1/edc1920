    <objectives>
        <objective>
            <name>XML (formato dos dados);</name>
            <done>True</done>
        </objective>
        <objective>
            <name>XML Schema (modelação e validação);</name>
            <done>True</done>
        </objective>
        <objective>
            <name>XPATH (filtragem de dados);</name>
            <done>True</done>
        </objective>
        <objective>
            <name>XSLT (transformação de dados);</name>
            <done>True</done>
        </objective>
        <objective>
            <name>BaseX (armazenamento de dados);</name>
            <done>True</done>
        </objective>
        <objective>
            <name>XQuery e XQuery Update (pesquisa e alteração dos dados na BD);</name>
            <done>True</done>
        </objective>
        <objective>
            <name>RSS e/ou Atom (recolha de dados externos).</name>
            <done>True</done>
        </objective>
        <objective>
            <name>Python/Django (programação da aplicação);</name>
            <done>True</done>
        </objective>
